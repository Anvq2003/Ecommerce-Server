{
  "collectionName": "components_shared_classifications",
  "info": {
    "displayName": "Classification",
    "icon": "apps",
    "description": ""
  },
  "options": {},
  "attributes": {
    "size": {
      "type": "enumeration",
      "enum": [
        "small",
        "medium",
        "large"
      ],
      "required": true
    },
    "quantity": {
      "type": "integer",
      "default": 0
    },
    "bought": {
      "type": "integer",
      "default": 0
    },
    "price": {
      "type": "biginteger",
      "required": true
    },
    "priceOld": {
      "type": "integer",
      "default": 0
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "status": {
      "type": "boolean",
      "default": true
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
